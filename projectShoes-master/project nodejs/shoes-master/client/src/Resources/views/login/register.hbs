<div class="wrapper bg-white">
  <div class="h2 text-center">Creativity</div>
  <div class="h4 text-muted text-center pt-2">Enter your login details</div>
  <form class="pt-3" action="/account" method="POST">
    <div class="form-group py-2">
      <div class="input-field">
        <span class="far fa-user p-2"></span>
        <input type="text" placeholder="Username " name="username" class="" />
      </div>
    </div>
    <div class="form-group py-1 pb-2">
      <div class="input-field">
        <span class="fas fa-lock p-2"></span>
        <input type="password" placeholder="Enter your Password" name="password" class="" />
        <button class="btn bg-white text-muted">
          <span class="far fa-eye-slash"></span>
        </button>
      </div>
    </div>
    <div class="form-group py-1 pb-2">
      <div class="input-field">
        <span class="fas fa-lock p-2"></span>
        <input type="text" placeholder="Email" name="email" class="" />
        <button class="btn bg-white text-muted">
        </button>
      </div>
    </div>
    <div class="form-group py-2">
      <div class="input-field">
        <span class="far fa-user p-2"></span>
        <input type="text" placeholder="Images" name="images" class="" />
      </div>
    </div>
    <div class="form-group py-2">
      <div class="input-field">
        <span class="far fa-user p-2"></span>
        <input type="text" placeholder="Name" name="name" class="" />
      </div>
    </div>
    <div class="form-group py-2">
      <div class="input-field">
        <span class="far fa-user p-2"></span>
        <input type="text" placeholder="Age" name="age" class="" />
      </div>
    </div>
      <div class="form-group py-2">
      <div class="input-field">
        <span class="far fa-user p-2"></span>
        <input type="text" placeholder="Address" name="address" class="" />
      </div>
    </div>
      <div class="form-group py-2" style="display: none;">
      <div class="input-field">
        <span class="far fa-user p-2"></span>
        <input type="text" placeholder="role" value="role" name="role" />
      </div>
    </div>
    <button class="btn btn-block text-center my-3">Sign Up</button>
    <div class="text-center pt-3 text-muted">Do you already have an account?
      <a href="/login">Sign in</a></div>
  </form>
</div>