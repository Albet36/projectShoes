<div class="product-big-title-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="product-bit-title text-center">
          <h2>Shop</h2>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="single-product-area">
  <div class="zigzag-bottom"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12" style="padding: 0 400px;">
        
       
       <form action="/searchProduct" method="POST" role="form">
       <div class="input-group">  
        <input type="text" class="form-control" id="exampleInputAmount" name="search" placeholder="Search">
        <span class="input-group-btn">
          <button type="button" class="btn btn-default">Go!</button>
        </span>
       </div>
       </form>
       
       
        
      </div>
    {{#each listProduct}}
      <div class="col-md-3 col-sm-6">
        <div class="single-shop-product">
          <div class="product-upper">
            <img src="{{this.imagesProduct}}" alt="" />
          </div>
          <h2><a href="/products/ProductDetails/{{this._id}}">{{this.nameProduct}}</a></h2>
          <div class="product-carousel-price">
            <del>${{this.priceProduct}}</del>
            <ins>${{this.priceSale}}</ins>
          </div>

          <div class="product-option-shop">
            <a
              class="add_to_cart_button"
              data-quantity="1"
              data-product_sku=""
              data-product_id="70"
              rel="nofollow"
              href="/canvas/shop/?add-to-cart=70"
            >Add to cart</a>
          </div>
        </div>
      </div>
    {{/each}}
     
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="product-pagination text-center">
          <nav>
            <ul class="pagination">
              <li>
                <a href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li>
                <a href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>