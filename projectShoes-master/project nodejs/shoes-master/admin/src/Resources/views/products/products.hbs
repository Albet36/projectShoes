<div class="col-sm-12 col-xl-12">

  <a href="/products/createProduct" class="btn btn-danger mt-3">Create</a>
  <a
    href="/products/upload-mass-product/step-1"
    class="btn btn-default mt-2"
    href="#"
  ><i class="fa fa-list" aria-hidden="true"></i></a>

  <form action="/searchProducts" method="get">
    <div class="input-group p-5">
      <div class="col-xl-12">
        <div class="row">
          <div class="col-xl-3">
            <input type="text" class="form-control mt-3" name="search" placeholder="keyword"/></div>
         
         
      </div>
     
    </div>
<button class="btn btn-primary">Search</button>
  </form>
</div>
<div class="container-fluid pt-4 px-4">
  <div class="bg-light text-center rounded p-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
      <h6 class="mb-0">Recent Salse</h6>

      <h6> All Product : {{list.length}}</h6>
      
      <a href="">Show All</a>
    </div>
    <div class="table-responsive">
      <table
        class="table text-start align-middle table-bordered table-hover mb-0"
      >
        <thead>
          <tr class="text-dark">
            <th scope="col"><input
                class="form-check-input"
                type="checkbox"
              /></th>
            <th scope="col">Mã Sản Phẩm</th>
            <th scope="col">Ảnh sản phẩm</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá</th>
                   <th scope="col">Giá giảm</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Năm sản xuất</th>
             <th scope="col">Thể loại</th>
                 <th scope="col">Nhà Sản Xuất</th>
                <th scope="col">Thời gian tạo</th>
                 <th scope="col">Thời Gian sửa đổi</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#if list}}
          {{#each list}}
            <tr>
              <td><input class="form-check-input" type="checkbox" /></td>
              <td>{{this.idProduct}}</td>
              <td class="w-100"><img
                  src="{{this.imagesProduct}}"
                  alt=""
                  style="width: 100%;"
                /></td>
       
              <td>{{this.nameProduct}}</td>
              <td>{{this.priceProduct}}</td>
                 <td>{{this.priceSale}}</td>
              <td>{{this.description}}</td>
              <td>{{this.status}}</td>
               <td>{{this.yearOfManufacture}}</td>
          <td>{{this.category}}</td>
              <td>{{this.producer}}</td>
               <td>{{this.createdAt}}</td>
               <td>{{this.updatedAt}}</td>
                 <td>
                 <form action="/products/editProduct/{{this._id}}" class="m-1" method="POST" role="form">
                              
                              <button class="btn btn-primary">Edit</button>
                            </form>     
            </td>
            </tr>
            {{/each}}
          {{/if}}

        </tbody>
      </table>
    </div>
  </div>
</div>