<div class="container-fluid pt-4 px-4">
           <!-- row -->
            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <div class="white-box">
                        <div class="user-bg"> <img width="100%" alt="user" src="{{user.images}}">
                        </div>
                          <label for="formFileLg" class="form-label mt-2">Large file input example</label>
                                <input class="form-control form-control-lg" id="formFileLg" type="file">
                    </div>
                </div>
                <div class="col-md-8 col-xs-12">
                    <div class="white-box">
                        <form class="form-horizontal form-material" action="/account/{{user._id}}?_method=PUT" method="post">
                            <div class="form-group mb-4">
                                <label class="col-md-12">Full Name</label>
                                  
                                <div class="col-md-12">

                                    <input type="text" value="{{user.name}}" name="name"
                                        class="form-control form-control-line"> </div>
                            </div>
                                       <div class="form-group mb-4">
                                <label for="example-email" class="col-md-12">Username</label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="johnathan@admin.com" value="{{user.username}}"
                                        class="form-control form-control-line" name="username" id="example-email">
                                </div>
                         
                            </div>
                            <div class="form-group mb-4">
                                <label class="col-md-12">Password</label>
                                <div class="col-md-12">
                                    <input type="password" value="{{user.password}}" name="pasword" class="form-control form-control-line">
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label class="col-md-12">Email</label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="123 456 7890" name="text" value="{{user.email}}"
                                        class="form-control form-control-line"> </div>
                            </div>
                             <div class="form-group mb-4">
                                <label class="col-md-12">Age</label>
                                <div class="col-md-12">
                                    <input type="text" name="age" placeholder="age" value="{{user.age}}"
                                        class="form-control form-control-line"> </div>
                            </div>
                            
                            <div class="form-group mb-4">
                                <label class="col-sm-12">Address</label>
                                <div class="col-sm-12 mb-4">
                                     <input type="text" name="address"  value="{{user.address}}"
                                        class="form-control form-control-line">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button class="btn btn-success">Update Profile</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            </div>