<div class="col-sm-12 col-xl-12">

  <a href="/category/createCategory" class="btn btn-danger mt-3">Create</a>
  <form action="">
    <div class="input-group p-5">
      <div class="col-xl-12">
        <div class="row">
          <div class="col-xl-6">
            <input type="text" class="form-control mt-3" /></div>
          <div class="col-xl-3">

            <select
              name=""
              id="input"
              class="form-control mt-3"
              required="required"
              aria-placeholder="keyword"
            >
              <option value=""></option>
            </select>
          </div>
          <div class="col-xl-3">

            <select
              name=""
              id="input"
              class="form-control mt-3"
              required="required"
            >
              <option value=""></option>
            </select>
          </div>

        </div>
      </div>

    </div>
  </form>
</div>
<div class="container-fluid pt-4 px-4">
  <div class="bg-light text-center rounded p-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
      <h6 class="mb-0">Recent Salse</h6>
      <h6> Category: {{result.length}}</h6>
      <a href="">Show All</a>
    </div>
    <div class="table-responsive">
      <table
        class="table text-start align-middle table-bordered table-hover mb-0"
      >
        <thead>
          <tr class="text-dark">
            
            <th scope="col">Index</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        {{#each result}}
          <tr>
            <td>1</td>
            <td>{{this.name}}</td>
            <td><a
                class="btn btn-sm btn-primary"
                href="/category/editCategory/{{this._id}}"
              >Edit</a></td>
              
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>